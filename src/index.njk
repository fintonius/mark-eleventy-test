---
title: home page
layout: base.njk
---
{% block styles %}
 <link rel="stylesheet" href="/home-page-style.css" />
{% endblock %}
<main id="main">
    <section class="category">
        <div class="title">
            <h2> Participate </h2>
            <div class="nav-arrow-container">
                <button class="nav-arrow left-arrow">
                    ◀
                </button>
                <button class="nav-arrow right-arrow">
                    ▶
                </button>
            </div>
        </div>
        <div class="home-page-content">
            {%- for project in collections.participate -%}
                <div class="project-link-image">
                    <card>
                        <a href="{{ project.url }}">
                            <img src="{{ project.data.image }}"/>
                        </a>
                    </card>
                    <div class="page-link-description">
                        {{ project.data.context | safe }}
                    </div>
                </div>
            {%- endfor %}
        </div>
    </section>
